<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectointermodular.controllers.MenuPrincipal">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Archivo">
                <MenuItem id="closeMenu" fx:id="closeMenu" mnemonicParsing="false" onAction="#closeMenu" text="Close" />
            </Menu>
            <Menu mnemonicParsing="false" text="Enlaces">
                <MenuItem mnemonicParsing="false" onAction="#menuprincipal" text="Menú Principal" />
