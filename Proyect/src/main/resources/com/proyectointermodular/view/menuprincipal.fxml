                <MenuItem mnemonicParsing="false" onAction="#verJugadoras" text="Lista de Jugadoras" />
                <MenuItem mnemonicParsing="false" onAction="#verClubs" text="Lista de Clubs" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#addPlayer" text="Añadir Jugadora" />
                <MenuItem mnemonicParsing="false" onAction="#addClub" text="Añadir Club" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>
    <right>
        <VBox prefHeight="375.0" prefWidth="132.0" style="-fx-background-color: gray;" BorderPane.alignment="CENTER">
            <Button fx:id="verJugadoras" layoutX="10.0" mnemonicParsing="false" onAction="#verJugadoras" prefHeight="75.0" prefWidth="200.0" text="Lista de Jugadoras" />
